<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.AskQuestionActivity">

    <TextView
        android:id="@+id/ask_question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Ask a Question"
        android:textSize="28dp"

        android:fontFamily="@font/nexa_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/ask_question_desc"
        android:layout_width="351dp"
        android:layout_height="256dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:background="@drawable/edit_text_border"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textColor="#0B0A0A"
        android:textColorHint="#0B0A0A"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ask_question_title" />

    <Button
        android:id="@+id/questionButton"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="116dp"
        android:text="Ask Question"
        android:backgroundTint="@color/bluejay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ask_question_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>