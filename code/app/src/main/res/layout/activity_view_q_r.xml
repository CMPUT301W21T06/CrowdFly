<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ViewQRActivity">


    <TextView
        android:id="@+id/QRMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Menu"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:fontFamily="@font/nexa_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <Button
        android:id="@+id/generateQRButton"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:text="Generate QR Code"
        android:backgroundTint="@color/bluejay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QRMenuTitle" />

    <Button
        android:id="@+id/scanQRButton"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:text="Scan QR Code"
        android:backgroundTint="@color/bluejay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generateQRButton" />

    <Button
        android:id="@+id/registerBarcodeButton"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:text="Register Barcode"
        android:backgroundTint="@color/bluejay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanQRButton" />

</androidx.constraintlayout.widget.ConstraintLayout>