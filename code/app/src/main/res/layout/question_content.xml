<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/question_content"
    android:layout_height="150dp"
    android:background="@color/colorAccent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/qDate"
        android:layout_width="127dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="date"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/askerID"
        android:layout_width="127dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="asker ID"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qDate" />

    <TextView
        android:id="@+id/qtitleReplies"
        android:layout_width="61dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="Replies:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/askerID" />

    <TextView
        android:id="@+id/qReplies"
        android:layout_width="61dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/qtitleReplies"
        app:layout_constraintTop_toBottomOf="@+id/askerID" />

    <TextView
        android:id="@+id/qSnippet"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:gravity="center_vertical"
        android:text="question snippet"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewAllReplies"
        android:layout_width="133dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="32dp"

        android:gravity="center_vertical"
        android:text="@string/accessReplies"
        android:textColor="@color/purple_200"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qSnippet" />


</androidx.constraintlayout.widget.ConstraintLayout>