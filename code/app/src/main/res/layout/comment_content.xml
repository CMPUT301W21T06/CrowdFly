    <TextView
        android:id="@+id/commenterIDtitle"
        android:layout_width="58dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:text="@string/asker"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/qDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cSnippet" />

    <TextView
        android:id="@+id/commenterID"
        android:layout_width="310dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:text="asker ID"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/commenterIDtitle"
        app:layout_constraintTop_toBottomOf="@id/cSnippet" />

    <TextView
        android:id="@+id/cSnippet"
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:text="comment snippet"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/cSnippettitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cSnippettitle"
        android:layout_width="28dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:text="@string/comment"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>